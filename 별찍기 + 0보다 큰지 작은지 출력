// 별찍기
    *
   ***
  *****
 *******
*********
# pragma (disable : 4996)
#include <stdio.h>

int main()
{
	int i, j, k = 1;
	for (i = 5; i > 0; i--)
	{
		for (j = 0; j < i - 1; j++)
			printf(" ");
		for (j = 0; j < k; j++)
			printf("*");
		printf("\n");
		k += 2;
	}
	return 0;
}


//숫자 입력해서 0보다 큰지 작은지 출력
# pragma (disable : 4996)
#include <stdio.h>


int main()
{
	int num = 0;
	scanf("%d", &num);
	if (num < 0)
		printf("0보다 작다.\n");
	if (num > 0)
		printf("0보다 크다.\n");
	if(num == 0)
		printf("0과 같다.\n");
	return 0;
}
