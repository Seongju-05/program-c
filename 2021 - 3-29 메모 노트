1.
//국어 , 수학, 프로그래밍 성적을 입력받아
//평균을 내고, 그 평균점수가
//90점 이상이면 'A'출력, 80점 이상이면 'B'
//70점 이상이면 'C' 60점 이상이면 'D'
//60점미만이면 'F'를 출력하는 프로그램을 만드세요.
#pragma warning (disable : 4996)
#include <stdio.h>

int main()
{
	int n1, n2, n3, abs;
	scnaf("%d %d %d", &n1, &n2, &n3);
	abs = (n1 + n2 + n3) / 3.0;
	if (abs >= 90)
		printf("A\n");
	else if (abs >= 80)
		printf("B\n");
	else if (abs >= 70)
		printf("C\n");
	else if (abs >= 60)
		printf("D");
	else
		printf("F");
	return 0;
}

2.
// break 사용해서 탈출하기
//1~100까지의 합을 구하도록 하시오.
#pragma warning (disable : 4996)
#include <stdio.h>
int main()
{
	int sum = 0, num = 0;
	while (1) {
		sum += ++num;
		if (num >= 100)
			break;
      
	}
	printf("총합 : %d\n", sum);
	return 0;
}

3.
//국어 , 수학, 프로그래밍 성적을 입력받아
//평균을 내고, 그 평균점수가
//100이하 90초과이면 'A'출력, 90점 이하 80점초과이면 'B'
//70점이하이면 'F'를 출력하는 프로그램을 만드세요.
#pragma warning (disable : 4996)
#include <stdio.h>

int main()
{
	int x;
	printf("점수 : ");
	scanf("%d", &x);
	if (x > 90 && x <= 100)
	{
		printf("A\n");
	}
	if (x > 80 && x <= 90)
	{
		printf("B\n");
	}
	if (x > 70 && x <= 80)
	{
		printf("C\n");
	}
	if (x > 0 && x <= 70)
	{
		printf("F\n");
	}
	return 0;
}
