1.
//국어 , 수학, 프로그래밍 성적을 입력받아
//평균을 내고, 그 평균점수가
//90점 이상이면 'A'출력, 80점 이상이면 'B'
//70점 이상이면 'C' 60점 이상이면 'D'
//60점미만이면 'F'를 출력하는 프로그램을 만드세요.
#pragma warning (disable : 4996)
#include <stdio.h>

int main()
{
	int n1, n2, n3, abs;
	scnaf("%d %d %d", &n1, &n2, &n3);
	abs = (n1 + n2 + n3) / 3.0;
	if (abs >= 90)
		printf("A\n");
	else if (abs >= 80)
		printf("B\n");
	else if (abs >= 70)
		printf("C\n");
	else if (abs >= 60)
		printf("D");
	else
		printf("F");
	return 0;
}

2.
// break 사용해서 탈출하기
//1~100까지의 합을 구하도록 하시오.
#pragma warning (disable : 4996)
#include <stdio.h>
int main()
{
	int sum = 0, num = 0;
	while (1) {
		sum += ++num;
		if (num >= 100)
			break;
      
	}
	printf("총합 : %d\n", sum);
	return 0;
}

3.
//1~200까지 3의 배수이면서 5의 배수인 숫자를 출력하시오.(5개 마다 세줄에서 출력)
#pragma warning (disable : 4996)
#include <stdio.h>
int main()
{
	int a, cnt = 1;
	for (a = 1; a <= 200; a++)
		if (a % 3  == 0 && a % 5 == 0) {
			printf("%4d", a);
			cnt++;
			if (cnt == 5) {
				printf("\n");
				cnt = 0;
			}
		}
	return 0;
}
