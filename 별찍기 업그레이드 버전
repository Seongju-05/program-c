#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

	int main ()
	{
	int a, b;
	for (a = 5; a >= 0; a--)
	{
		for (b = 0; b < 5 - a; b++)
		{
			printf("*");
		}
		printf("\n");
		}
	for (a = 5; a > 0; a--)
	{
		for (b = 0; b < a; b++) {
			printf("*");
		}
		printf("\n");
	}
	return 0;
}



//    *
//   ***
//  *****
// *******
//*********
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>


int main()
{
	int i, j, k = 1;
	for (i = 5; i > 0; i--)
	{
		for (j = 0; j < i - 1; j++)
			printf(" ");
		for (j = 0; j < k; j++)
			printf("*");
		printf("\n");
		k += 2;
	}
	return 0;
}
